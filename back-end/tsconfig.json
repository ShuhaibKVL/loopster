{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "express"]
  },
  "include": ["src/**/*.ts", "src/utils/mailSender.ts", "src/utils/otpGenerator.ts"],
  "exclude": ["node_modules","dist"]
}
